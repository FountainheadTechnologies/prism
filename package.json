{
  "name": "@optics/prism-dev",
  "description": "A JavaScript Framework for building database-driven Hypermedia HTTP APIs",
  "repository": {
    "type": "git",
    "url": "https://github.com/optics-team/prism.git"
  },
  "author": "Warren Seymour <warren@fountainhead.tech>",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/boom": "0.0.32",
    "@types/hapi": "^16.1.11",
    "@types/hapi-auth-jwt2": "^7.0.0",
    "@types/jest": "^16.0.1",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/lodash": "^4.14.53",
    "@types/ramda": "^0.25.8",
    "@types/tv4": "^1.2.28",
    "@types/uri-templates": "^0.1.28",
    "fs-extra-promise": "^0.4.1",
    "jest": "^17.0.3",
    "merge-stream": "^1.0.1",
    "ts-jest": "^17.0.3",
    "tslint": "^4.4.2",
    "typescript": "^2.6.2"
  },
  "jshintConfig": {
    "esnext": true
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "boom": "^4.2.0",
    "hapi-auth-jwt2": "^7.2.4",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.4",
    "pg-promise": "^7.3.2",
    "ramda": "^0.22.1",
    "squel": "^5.12.0",
    "tv4": "^1.2.7",
    "uri-templates": "^0.2.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:tsc && npm run build:copy",
    "build:tsc": "tsc",
    "build:copy": "node ./scripts/copy.js",
    "clean": "rm -rf build",
    "pretest": "npm run lint",
    "test": "jest --no-cache",
    "lint": "tslint --project tsconfig.json"
  },
  "version": "1.5.0",
  "jest": {
    "notify": true,
    "transform": {
      ".ts": "../node_modules/ts-jest/preprocessor.js"
    },
    "rootDir": "src",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "testResultsProcessor": "../node_modules/ts-jest/coverageprocessor.js",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
